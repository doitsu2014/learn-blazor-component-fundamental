@page "/"
<h1>Hello, world!</h1>
Welcome to your new app.

<Alert @bind-Show="@ShowAlert">
    <span class="mt-5">Blazor</span> is amazing.
</Alert>
<button class="btn btn-primary" @onclick="Toggle">Toggle Alert</button>
<Timer TimeInSeconds="5" Tick="@Toggle" />
<SurveyPrompt Title="How is Blazor working for you?" />

@code 
{
    public bool ShowAlert { get; set; } = false;
    public void Toggle()
    {
        System.Console.WriteLine("+++");
        ShowAlert = !ShowAlert;
        this.StateHasChanged();
    }
}
